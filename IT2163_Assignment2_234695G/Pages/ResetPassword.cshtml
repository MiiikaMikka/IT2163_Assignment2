@page
@model IT2163_Assignment2_234695G.Pages.ResetPasswordModel

<h2>Reset Your Password</h2>

<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div>
        <!-- Hidden fields to pass UserId and Reset Code -->
        <input type="hidden" asp-for="Input.Email" />
        <input type="hidden" asp-for="Input.Token" />
    </div>

    <div>
        <label for="Input_NewPassword">New Password</label>
        <input type="password" asp-for="Input.NewPassword" required />
        <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
    </div>

    <div>
        <label for="Input_ConfirmPassword">Confirm New Password</label>
        <input type="password" asp-for="Input.ConfirmPassword" required />
        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
    </div>

    <button type="submit">Reset Password</button>
</form>
