@page
@model IT2163_Assignment2_234695G.Pages.RegisterModel
@{
}

<form method="post" enctype="multipart/form-data">
    <!-- Display validation summary -->
    <div asp-validation-summary="All" class="text-danger"></div>

    <input type="text" asp-for="Input.FirstName" required placeholder="First Name" />
    <span asp-validation-for="Input.FirstName" class="text-danger"></span>

    <input type="text" asp-for="Input.LastName" required placeholder="Last Name" />
    <span asp-validation-for="Input.LastName" class="text-danger"></span>

    <select asp-for="Input.Gender" required>
        <option value="">Select Gender</option>
        <option value="Male">Male</option>
        <option value="Female">Female</option>
        <option value="Other">Other</option>
    </select>
    <span asp-validation-for="Input.Gender" class="text-danger"></span>

    <input type="email" asp-for="Input.Email" required placeholder="Email" />
    <span asp-validation-for="Input.Email" class="text-danger"></span>

    <input type="password" asp-for="Input.Password" required placeholder="Password" />
    <span asp-validation-for="Input.Password" class="text-danger"></span>

    <input type="password" asp-for="Input.ConfirmPassword" required placeholder="Confirm Password" />
    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>

    <input type="text" asp-for="Input.NRIC" required placeholder="NRIC" />
    <span asp-validation-for="Input.NRIC" class="text-danger"></span>

    <textarea asp-for="Input.WhoAmI" placeholder="Tell us about yourself (Who Am I?)" rows="4"></textarea>
    <span asp-validation-for="Input.WhoAmI" class="text-danger"></span>

    <input type="file" asp-for="Input.ResumeFile" accept=".pdf,.docx" />
    <span asp-validation-for="Input.ResumeFile" class="text-danger"></span>

    <button type="submit">Register</button>
</form>

<p>Already have an account? <a asp-page="Login">Login here</a></p>
