@page
@model IT2163_Assignment2_234695G.Pages.ChangePasswordModel

<h2>Change Password</h2>

<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div>
        <label for="Input_OldPassword">Old Password</label>
        <input type="password" asp-for="Input.OldPassword" required />
        <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
    </div>

    <div>
        <label for="Input_NewPassword">New Password</label>
        <input type="password" asp-for="Input.NewPassword" required />
        <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
    </div>

    <div>
        <label for="Input_ConfirmPassword">Confirm New Password</label>
        <input type="password" asp-for="Input.ConfirmPassword" required />
        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
    </div>

    <button type="submit">Change Password</button>
</form>
